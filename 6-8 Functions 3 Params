/* Function with 3 parameters
Program 6-8
*/

#include <iostream>
using namespace std;

//function prototypes
void showSum (int, int, int);

int main()
{
  int value1, value2, value3;
  
  //get three integers
  cout << "Enter 3 integers and I will display thier sum: ";
  cin >> value1 >> value2 >> value3;
  
  //call showSum passing three arguments to it
  showSum(value1, value2, value3);
  return 0;
}
  
  void showSum(int num1, int num2, int num3)
  {
    cout << (num1 + num2 + num3) << endl;
  }
