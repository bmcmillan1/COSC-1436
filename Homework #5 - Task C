/* Ask for user's name and to input 10 numbers, average those numbers
Brian McMillan
COSC-1436
Homework #5 - Task C
*/

#include <iostream>
#include <iomanip>
using namespace std;

int main ()
{
  //variables
  string NAME;
  const int TENNUMS = 10;
  float SUM;
  float AVERAGE;
  float INPUT;
  
  //ask for name
  cout << "What is your name? ";
  cin >> NAME;
  
  //ask for numbers
  cout << "Thank you, " << NAME << ". Please enter 10 numbers, between 1 and 100, and I will average them.\n";
    for (int i = 0; i != TENNUMS; ++i)
    {
        cout << "Enter a number: ";
        cin >> INPUT;
        
        SUM += INPUT;
    }
    
    //calculate and display the average
    AVERAGE = SUM / TENNUMS;
    cout << fixed << showpoint << setprecision(1);
    cout << "The average of those 10 numbers is " << AVERAGE << endl;
    
  //limit the span of the numbers
  while (INPUT < 1 || INPUT > 100) 
    {
    cout << "Error: Enter a value between 1-100: ";
    cin >> INPUT;
    }
    
return 0;
}
