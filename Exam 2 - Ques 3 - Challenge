/* Chapter 6, Programming Challenge #1, page 366
enter wholesale cost + markup percentages
then display retail price.
Example: cost is 5.00, markup is 100%, retail price is 10.00
must use function called calculateRetail
no negative values allowed
Brian McMillan
*/

#include <iostream>
using namespace std;

int main()
{

  //variables
  double COST, MARKUP, PRICE;
  
  //functions
  void calculateRetail(double, double, double);
  
  
  //program
  cout << "Enter the retail cost of the item: ";
  cin >> COST >> endl;
  cout << "Enter the markup percentage as a decimal value: ";
  cin >> MARKUP >> endl;
  cout << calculateRetail() << endl;
  
  //function definitions
  void calculateRetail(double, double, double)
  {
    //calculate the retain price using input variables
    cout << (COST / MARKUP = PRICE) << endl;
  }
  
  
return 0;
}
