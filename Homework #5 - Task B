/* While loop to guess a number
Brian McMillan COSC-1436
Homework #5 - Task B
*/

#include <iostream>
using namespace std;

int main()
{
  int number = 7;
  int guess;
  
  cout << "Guess a number between 1-10: ";
  cin >> guess;
  
  while (guess < 1 || guess > 10) 
  {
    cout << "Error: Enter a value between 1-10: ";
    cin >> guess;
    
  }
  
  while (number == guess)
  {
        cout << "You guessed the correct number!";
        
  }
  return 0;
  
}
