#include <iostream>
using namespace std;


int main()
{
    int x = 10;
    int *ptr = nullptr;
    
    ptr = &x;
    cout << "The values in x is " << x << endl;
    cout << "The address of x is " << ptr << endl;
    cout << "The size of x is " << sizeof(x) << " bytes\n";
    
    return 0;
}
