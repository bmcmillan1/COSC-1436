*/

#include <iostream>
using namespace std;

int main()
{
  int number;
  
  cout << "Enter a number in the range 1-100: ";
  cin >> number;
  
  while (number < 1 || number > 100) 
  {
    cout << "Error: Enter a value between 1-100: ";
    cin >> number;
    
  }
  return 0;
  
}


