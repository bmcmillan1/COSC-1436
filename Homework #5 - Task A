#include <iostream>
using namespace std;

int main()
{
  int number = 0;
  
  while (number < 10)
  {
    cout << "I Love C++\n";
    number++;
  }

  cout << "I wish the program hadn't ended.  I really love programming!\n";
  return 0;
  
}
